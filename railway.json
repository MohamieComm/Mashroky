{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "restartPolicyMaxRetries": 10,
    "restartPolicyWindowSeconds": 600,
    "startCommand": "npx vite preview --host --port ${PORT:-8080}",
    "healthchecks": {
      "liveness": {
        "initialDelaySeconds": 30,
        "periodSeconds": 30,
        "timeoutSeconds": 10,
        "successThreshold": 1,
        "failureThreshold": 3
      }
    }
  }
}
