{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "restartPolicyMaxRetries": 10,
    "restartPolicyWindowSeconds": 600,
    "startCommand": "npm run build && npm run start",
    "healthchecks": {
      "liveness": {
        "initialDelaySeconds": 30,
        "periodSeconds": 30,
        "timeoutSeconds": 10,
        "successThreshold": 1,
        "failureThreshold": 3
      }
    }
  }
}
